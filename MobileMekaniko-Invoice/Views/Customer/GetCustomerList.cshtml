@model List<MobileMekaniko_Invoice.Models.Dto.CustomerSummaryDto>

<div class="container d-flex justify-content-between">
    <div class="left">
        <h2>Customer List</h2>
    </div>
    <div class="right">
        <a asp-controller="Customer" asp-action="AddNewCustomer">Add Customer</a>
    </div>
</div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer #</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerEmail</td>
                <td>@customer.CustomerNumber</td>
                <td>
                    <a asp-controller="CustomerCar" asp-action="GetCustomerCar" asp-route-id="@customer.CustomerId"><i class="bi bi-pencil-square"></i></a>
                    <a asp-controller="Customer" asp-action="DeleteCustomerById" asp-route-id="@customer.CustomerId"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>